<Window x:Class="NIPOM.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NIPOM.WPF.Views" 
        xmlns:vm="clr-namespace:NIPOM.WPF.ViewModels"
        mc:Ignorable="d"
        Title="Ваганов А.В." Height="450" Width="800">
    <Window.DataContext>
        <vm:ComponentsViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal">
            <Button Content="Открыть Excel" Command="{Binding OpenFileExcel}"/>
            <Button Content="Открыть XML" Command="{Binding OpenFileExcel}"/>
            <Button Content="Сохранить XML" Command="{Binding OpenFileExcel}"/>
        </StackPanel>
        <DataGrid
            Grid.Row="1">
            
        </DataGrid>
    </Grid>
</Window>
